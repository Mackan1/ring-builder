/* ------------------------------------------------------------ *\
  Ring-builder
\* ------------------------------------------------------------ */

.ring-builder {
  padding-top: 70px;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow-x: hidden;

  @media screen and (max-width: 800px) {
    padding-top: 60px;
  }
}

.progress {
  max-width: 950px;
  margin-bottom: 30px;
  display: flex;
  justify-content: center;

  & .step {
    position: relative;
    border: 1.5px solid #2e3b47;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 15px;
    width: 300px;
    height: 50px;
    margin: 0 8px;
    font-weight: 500;

    & img {
      width: 25px;
      height: 25px;
      margin-left: 10px;
    }


      & .step-hover {
      visibility: hidden;
      position: absolute;
      width: 300px;
      top: 100%;
      background-color: white;
      border: 1.5px solid #2e3b47;
      border-top: none;
      padding: 0 20px;
      z-index: 10;

      @media screen and (max-width: 950px) {
        width: 350px;
        margin-top: -1px;
        left: 50%;
        top: calc(100% + 10px);
        transform: translateX(-50%);
        font-size: 14px;
        height: 160px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        border-top: 1.5px solid #2e3b47;
        padding: 0 35px;
      }
      

      & .step-hover_information{
        display: flex;

        & img{
          box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
          width: 50px;
          height: 50px;
          margin: 0;
        }
    
        & .selected-information{
          display: flex;
          flex-direction: column;
          justify-content: center;
          margin-left: 20px;
          flex-grow: 1;

          & .selected-band, .selected-diamond{
            margin: 0;
            font-size: 12px;
          }

          & .selected-band-metal{
            font-weight: lighter;
            font-size: 12px;
            font-style: italic;
            margin: 0;
          }

          & .selected-diamond-price, .selected-band-price{
            margin: 0;
            font-weight: bolder;
            font-size: 14px;
          }
        }
        

      }

        & .step-hover_buttons{
          display: flex;
          justify-content: center;
          flex-wrap: wrap;
          margin: 15px 0;
          @media screen and (max-width: 950px) {
            margin-top: 15px;
            margin-bottom: 0;
          }

          & .change {
            width: 100%;
            padding: 6px 12px;
            color: white;
            background-color: #2e3b47;
            border: 1.5px solid #2e3b47;
          }
        }
      

    }
  }

  & .active {
    background-color: #2e3b47;
    color: #fff;
    font-style: bold;
    opacity: 1;
    & img {
      filter: invert(100%) ;
    }
  }
}

.step:nth-child(3){
  cursor: pointer;
}

.was-active:hover {  
  & .step-hover{
    visibility: visible;
  }
}
   

@media screen and (max-width: 950px) {
    .progress {
    margin-bottom: 30px;
    width: 350px;
    justify-content: space-between;
    position: relative;

    & .step {
      margin: 0;
      width: 50px;
      font-size: 0;
      position: static;
      & img {
        margin: 0;
      }
    }
    & .active {
      font-size: 13px;
      width: 220px;
      & img {
        margin-left: 10px;
      }
    }
  }

  .was-active:hover::before{
    position: absolute;
    bottom: -10.2px;
    content: "";
    width: 50px;
    height: 15px;
    border-left: 1.5px solid #2e3b47;
    border-right: 1.5px solid #2e3b47;
    background-color: white;
    z-index: 99;
  }

 
}

