{% assign settings = section.settings %}
{% assign blocks = section.blocks %}
{% assign headline = settings.headline %}
{% assign subheading  = settings.subheader %}
<section class="Section Section--spacingNormal" data-section-id="featured-collections" data-section-type="featured-collections" data-settings="{&quot;layout&quot;: &quot;grid&quot;}">
    {% if blocks %}
    <header class="SectionHeader SectionHeader--center">
        <div class="Container">
    <h2 class="SectionHeader__Heading Heading u-h1">{{headline}}</h2>
    <h3 class="SectionHeader__SubHeading Heading u-h6">{{subheading}}</h3>
        </div>
    </header>
    <div class="ProductListWrapper">
        <div class="ProductList ProductList--grid ProductList--removeMargin Grid" data-mobile-count="2" data-desktop-count="4" style="visibility: inherit; opacity: 1; transform: matrix(1, 0, 0, 1, 0, 0);">
   {% for block in blocks %}
    
    {% assign block_settings = block.settings %}    
      {% assign image = block_settings.image %}
      {{image.url}}
    <div class="Grid__Cell 1/2--phone 1/2--tablet 1/4--lap-and-up">
        <div class="product-item">
          <a href="{{block_settings.link}}">
            {% include 'responsive-image', image: image, class: 'flipBlocks_image' %}
          </a>
    </div>
    </div>
    {% endfor %}
</div>
    </div>

    {% endif %}
</section>
{% schema %}
{
  "name": "Bespoke FP",
  "max_blocks": 4,
  "settings": [
    {
      "type": "header",
      "content": "Text Options"
    },
    {
        "type": "text",
        "id": "headline",
        "label": "Headline"
    },
      {
          "type": "text",
          "id": "subheader",
          "label": "Subheader"
      }
  ],
  "blocks": [
    {
      "type": "block-image",
      "name": "Image block",
      "settings": [
        {
          "type": "header",
          "content": "Image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Recommended size: 780x780"
        },
        {
          "type": "header",
          "content": "Link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bespoke FP",
      "category": "Content",
      "settings": {}
    }
  ]
}
{% endschema %}